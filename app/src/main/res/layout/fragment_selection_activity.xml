<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectionActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#908695"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/sonidoApagado"
            android:layout_width="35dp"
            android:layout_height="48dp"

            android:layout_marginStart="61dp"
            android:layout_marginTop="78dp"
            android:layout_marginBottom="32dp"
            android:drawableBottom="@android:drawable/ic_lock_silent_mode"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/sonidoEncendido"
            app:layout_constraintTop_toBottomOf="@+id/button_Multiplayer" />

        <Button
            android:id="@+id/sonidoEncendido"
            android:layout_width="35dp"
            android:layout_height="50dp"

            android:layout_marginStart="53dp"
            android:layout_marginTop="76dp"
            android:layout_marginBottom="32dp"
            android:drawableBottom="@android:drawable/ic_lock_silent_mode_off"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_Multiplayer" />

        <Button
            android:id="@+id/button_inicioPartida"
            android:layout_width="144dp"
            android:layout_height="135dp"
            android:text="Inicio Partida"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.172"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.362" />

        <Button
            android:id="@+id/button2"
            android:layout_width="144dp"
            android:layout_height="135dp"
            android:text="Tomar Foto"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.838"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.712" />

        <Button
            android:id="@+id/button_ranking"
            android:layout_width="144dp"
            android:layout_height="135dp"
            android:text="Ranking"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.835"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.362" />

        <Button
            android:id="@+id/button_Multiplayer"
            android:layout_width="144dp"
            android:layout_height="135dp"
            android:text="Multiplayer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.172"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.703" />

        <Button
            android:id="@+id/button_seleccionMusica"
            android:layout_width="135dp"
            android:layout_height="58dp"
            android:layout_marginStart="160dp"
            android:layout_marginTop="72dp"
            android:layout_marginEnd="69dp"
            android:layout_marginBottom="62dp"
            android:text="Seleccion Musica"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/sonidoEncendido"
            app:layout_constraintTop_toBottomOf="@+id/button2"
            app:layout_constraintVertical_bias="0.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>